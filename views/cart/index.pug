extends ../layout/common
block content
  .container
    div.row
      div.card-columns
        if (productsInCart)
          a(class="btn btn-primary ml-auto" href=`/cart/${session.id}/buyAll`) BUY ALL
          each product in productsInCart
            div.card
              img.card-img-top(src=product.coverImage)
              div.card-body
                h5.card-title=product.title
                p.card-text=product.description
                a(class="btn btn-primary ml-auto w-50 d-block" href=`/cart/${product._id}/buy`) BUY