extends ../layout/common
block content
    .container
        nav.navigation
            ul.pagination.justify-content-center
                if (page === 1)
                    li(class="page-item disabled")
                        a(class="page-link" href="#") Prev
                else
                    li(class="page-item")
                        a(class="page-link" href=`/users?page=${page-1}`) Prev      
                -for (let i = 1; i <= totalPage; i++)
                    if (i === page)
                        li.page-item.active
                            a(class="page-link" href=`/users?page=${i}`)= i
                    else
                        li.page-item
                            a(class="page-link" href=`/users?page=${i}`)= i                                            
                if (page === totalPage)
                    li(class="page-item disabled")
                        a(class="page-link" href="#") Next
                else
                    li(class="page-item")
                        a(class="page-link" href=`/users?page=${page+1}`) Next 
        table.table
            thead
                tr
                    th Avatar
                    th Name
                    th Email
                    th Address
                    th Views
            tbody
                if (users)
                    each user in users
                        tr
                            td
                                img(style="width: 30px; height: 30px; border-radius: 50%",
                                src=user.avatar ? user.avatar : 'https://res.cloudinary.com/reii/image/upload/v1588255305/oxpwpnna1oqmmwozvkwn.webp')
                            td= user.name
                            td= user.email
                            td= user.address
                            td
                                a(href=`/users/${user._id}/profile`) Profile
                


                    